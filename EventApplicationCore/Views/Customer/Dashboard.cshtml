@model EventApplicationCore.Model.DashboardModel
@{ 
    Layout = "~/Views/Shared/_LayoutNewCustomer.cshtml";
}
<div class="container-fluid py-3">
    <!-- Small boxes (Stat box) -->
    <div class="row">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-navy">
                <div class="inner">
                    <h3>@Model.CustomerDashBoard.TotalCustomerBooking</h3>
                    <p>Total Booking</p>
                </div>
                <div class="icon">
                    <i class="nav-icon fas fa-calculator text-white-50"></i>
                    @*<i class="ion ion-bag"></i>*@
                </div>
                <a href="#" class="small-box-footer" onclick="toogleRow()">More info <i class="fas fa-arrow-circle-right"></i></a>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <!-- /.row -->
    <div class="row" id="myRow" style="display:none">
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-info">
                <div class="inner">
                    <h3>@Model.CustomerDashBoard.TotalCustomerApprovedBooking</h3>

                    <p>Total Approved Booking</p>
                </div>
                <div class="icon">
                    <i class="ion ion-checkmark"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-success">
                <div class="inner">
                    <h3>@Model.CustomerDashBoard.TotalCustomerCancelledBooking</h3>

                    <p>Total Cancelled Booking</p>
                </div>
                <div class="icon">
                    <i class="ion ion-close"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-warning">
                <div class="inner">
                    <h3>@Model.CustomerDashBoard.TotalCustomerPendingBooking</h3>

                    <p>Total Pending Booking</p>
                </div>
                <div class="icon">
                    <i class="ion ion-clock"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
        <div class="col-lg-3 col-6">
            <!-- small box -->
            <div class="small-box bg-danger">
                <div class="inner">
                    <h3>@Model.CustomerDashBoard.TotalCustomerRejectedBooking</h3>

                    <p>Total Rejected Booking</p>
                </div>
                <div class="icon">
                    <i class="ion ion-thumbsdown"></i>
                </div>
            </div>
        </div>
        <!-- ./col -->
    </div>
    <!-- /.row -->
</div><!-- /.container-fluid -->
<script>
    function toogleRow() {
        var row = document.getElementById("myRow");
        if (row.style.display === "none") {
            row.style.display = "flex";
        } else {
            row.style.display = "none";
        }
    }
</script>