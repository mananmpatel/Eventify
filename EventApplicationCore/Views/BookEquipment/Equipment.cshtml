@model EventApplicationCore.Model.BookingEquipment
@{
    Layout = "~/Views/Shared/_LayoutNewCustomer.cshtml";
}

<div class="container py-3">
    <div class="row">
        <div class="col-5">
            <form asp-controller="BookEquipment" asp-action="Equipment" method="post">
                    <h3><span class="label label-info">Book Equipment</span></h3>
                    <div class="form-group">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)
                        @for (int i = 0; i < Model.EquipmentList.Count(); i++)
                        {
                            <input asp-for="@Model.EquipmentList[i].EquipmentChecked" type="checkbox" />
                            <label asp-for="@Model.EquipmentList[i].EquipmentID">@Model.EquipmentList[i].EquipmentName (Rs. @Model.EquipmentList[i].EquipmentCost)</label>
                            <input type="hidden" asp-for="@Model.EquipmentList[i].EquipmentID" />
                            <input type="hidden" asp-for="@Model.EquipmentList[i].EquipmentName" />
                            <br />
                        }
                        <div class="form-actions">
                            <input id="Submit" type="submit" class="btn btn-success" value="Book Equipment" />
                        </div>
                    </div>
            </form>
        </div>
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
            @{
                var data = (List<EventApplicationCore.Model.Equipment>)ViewBag.SliderEquipmentImages;
                <ol class="carousel-indicators">
                    @for (int i = 0; i < (data.Count()); i++)
                    {
                        <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
                    }
                </ol>

                <div class="carousel-inner">
                    @for (int i = 0; i < (data.Count()); i++)
                    {
                    <div class="carousel-item">
                            <img class="d-block w-100" src="/@data[i].EquipmentFilePath" alt="@data[i].EquipmentName">
                        <div class="carousel-caption d-none d-md-block">
                                <h5>@data[i].EquipmentName</h5>
                        </div>
                    </div>
                    }
                </div>
            }
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#carouselExampleIndicators .carousel-inner .carousel-item:first-child").addClass("active");

    $('input[type=checkbox]').click(function () {
        if ($(this).is(':checked')) {
           alert(1)
        } else {
            alert(1)
        }
    });
</script>