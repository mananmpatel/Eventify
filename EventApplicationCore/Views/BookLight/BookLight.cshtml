@model EventApplicationCore.Model.BookingLight
@{
    Layout = "~/Views/Shared/_LayoutNewCustomer.cshtml";
}
<div class="container py-3">
    <div class="row">
        <div class="col-5">
            <form method="post" enctype="multipart/form-data" asp-controller="BookLight" asp-action="BookLight">
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                    <h3><span class="label label-info">Book Lighting</span></h3>
                    <div class="form-group">
                        <label class="control-label" asp-for="LightType">Light Type</label>
                        <input asp-for="LightType" id="LightType1" value="1" type="radio" />
                        In Door
                        <input asp-for="LightType" id="LightType2" value="2" type="radio" />
                        Out Door
                        <span asp-validation-for="LightType" class="text-danger"></span>
                    </div>
                    <div class="form-group">

                        @for (int i = 0; i < Model.LightList.Count(); i++)
                        {
                            <input asp-for="@Model.LightList[i].LightChecked" type="checkbox" />
                            <label asp-for="@Model.LightList[i].LightID">@Model.LightList[i].LightName</label>
                            <input type="hidden" asp-for="@Model.LightList[i].LightID" />
                            <input type="hidden" asp-for="@Model.LightList[i].LightName" />
                            <br />
                        }
                    </div>
                    <div class="form-actions">
                        <input id="Submit" type="submit" class="btn btn-success" value="Book Lighting" />
                        <input id="Cancel" type="button" class="btn btn-success" value="Cancel" />
                    </div>
            </form>
        </div>
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                @{
                    var data = (List<EventApplicationCore.Model.Light>)ViewBag.SliderLightImages;
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < (data.Count()); i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
                        }
                    </ol>

                    <div class="carousel-inner">
                        @for (int i = 0; i < (data.Count()); i++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/@data[i].LightFilePath" alt="@data[i].LightName">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@data[i].LightName</h5>
                                </div>
                            </div>
                        }
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#carouselExampleIndicators .carousel-inner .carousel-item:first-child").addClass("active");
</script>