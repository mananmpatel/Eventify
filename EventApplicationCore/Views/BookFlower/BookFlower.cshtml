@model EventApplicationCore.Model.BookingFlower
@{
    Layout = "~/Views/Shared/_LayoutNewCustomer.cshtml";
}
<div class="container py-3">
    @if (TempData["BookingLightingMessage"] != null)
    {
        <p class="alert alert-success" id="successMessage">@TempData["BookingLightingMessage"]</p>
    }
    <div class="row">
        <div class="col-5">
            @if (TempData["BookingFlowerMessage"] != null)
            {
                <p class="alert alert-success" id="successMessage">@TempData["BookingFlowerMessage"]</p>
            }
            <form asp-controller="BookFlower" asp-action="BookFlower" method="post">
                    <h3><span class="label label-info">Book Flowers</span></h3>
                    <div class="form-group">
                        @Html.ValidationSummary(true)
                        @Html.AntiForgeryToken()
                        @for (int i = 0; i < Model.FlowerList.Count(); i++)
                        {
                            <input asp-for="@Model.FlowerList[i].FlowerChecked" type="checkbox" />
                            <label asp-for="@Model.FlowerList[i].FlowerID">@Model.FlowerList[i].FlowerName (Rs. @Model.FlowerList[i].FlowerCost)</label>
                            <input type="hidden" asp-for="@Model.FlowerList[i].FlowerID" />
                            <input type="hidden" asp-for="@Model.FlowerList[i].FlowerName" />
                            <br />
                        }
                        <div class="form-actions">
                            <input id="Submit" type="submit" class="btn btn-success" value="Book Flowers" />
                        </div>
                    </div>
            </form>
        </div>
        <div class="col-7">
            <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                @{
                    var data = (List<EventApplicationCore.Model.Flower>)ViewBag.SliderFlowerImages;
                    <ol class="carousel-indicators">
                        @for (int i = 0; i < (data.Count()); i++)
                        {
                            <li data-target="#carouselExampleIndicators" data-slide-to="i"></li>
                        }
                    </ol>

                    <div class="carousel-inner">
                        @for (int i = 0; i < (data.Count()); i++)
                        {
                            <div class="carousel-item">
                                <img class="d-block w-100" src="/@data[i].FlowerFilePath" alt="@data[i].FlowerName">
                                <div class="carousel-caption d-none d-md-block">
                                    <h5>@data[i].FlowerName</h5>
                                </div>
                            </div>
                        }
                    </div>
                }
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>
<script type="text/javascript">
    $("#carouselExampleIndicators .carousel-inner .carousel-item:first-child").addClass("active");
</script>