@model EventApplicationCore.Model.CompleteBookingModel
@{
    Layout = "~/Views/Shared/_LayoutNewCustomer.cshtml";
}

<div class="container pt-3">
    <div class="row">
        <div class="col-lg-6">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">Booking Details</h5>
                </div>
                <div class="card-body">
                    <label class="control-label" asp-for="@Model.BillingModel.BookingNo">Booking No</label>
                    <input asp-for="@Model.BillingModel.BookingNo" type="text" readonly="readonly" class="form-control" />

                    <label class="control-label" asp-for="@Model.BillingModel.BookingDate">Booking Date</label>
                    <input asp-for="@Model.BillingModel.BookingDate" readonly="readonly" maxlength="10" name="VenueCost" type="text" class="form-control" />

                    <label class="control-label" asp-for="@Model.BookingVenue.EventName">Event Name</label>
                    <input asp-for="@Model.BookingVenue.EventName" readonly="readonly" maxlength="10" name="VenueCost" type="text" class="form-control" />

                    <label class="control-label" asp-for="@Model.BookingVenue.GuestCount">Guest Count</label>
                    <input asp-for="@Model.BookingVenue.GuestCount" readonly="readonly" maxlength="10" name="VenueCost" type="text" class="form-control" />

                    <label class="control-label" asp-for="@Model.BillingModel.TotalAmount">Total Amount</label>
                    <input asp-for="@Model.BillingModel.TotalAmount" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                </div>
            </div>
            <!-- Equipment -->
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">Equipment Details</h5>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.BookingEquipment.Count(); i++)
                    {
                        <div class="row">
                            <div class="col-6">
                                <label class="control-label" asp-for="@Model.BookingEquipment[i].EquipmentName">EquipmentName</label>
                                <input asp-for="@Model.BookingEquipment[i].EquipmentName" readonly="readonly" type="text" class="form-control" />
                            </div>

                            <div class="col-6">
                                <label class="control-label" asp-for="@Model.BookingEquipment[i].EquipmentCost">EquipmentCost</label>
                                <input asp-for="@Model.BookingEquipment[i].EquipmentCost" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                            <div class="col-lg-3">
                            </div>
                            <div class="col-lg-3">
                            </div>
                        </div>
                    }
                </div>
            </div> <!-- ./Equipment -->

            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">Lightning Details</h5>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.BookingLight.Count(); i++)
                    {
                        <div class="row">
                            <div class="col-lg-3">
                                <label class="control-label" asp-for="@Model.BookingLight[i].LightName">LightName</label>
                                <input asp-for="@Model.BookingLight[i].LightName" readonly="readonly" type="text" class="form-control" />
                            </div>

                            <div class="col-lg-3">
                                <label class="control-label" asp-for="@Model.BookingLight[i].LightTypeName">LightCost</label>
                                <input asp-for="@Model.BookingLight[i].LightTypeName" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                            <div class="col-lg-3">
                                <label class="control-label" asp-for="@Model.BookingLight[i].LightCost">LightCost</label>
                                <input asp-for="@Model.BookingLight[i].LightCost" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                            <div class="col-lg-3">
                            </div>
                        </div>
                    }
                </div>
            </div>


        </div>
        <div class="col-lg-6">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">Venue Detail</h5>
                </div>
                <div class="card-body">
                    <label class="control-label" asp-for="@Model.BookingVenue.VenueName">Venue Name</label>
                    <input asp-for="@Model.BookingVenue.VenueName" type="text" readonly="readonly" class="form-control" />

                    <label class="control-label" asp-for="@Model.BookingVenue.VenueCost">Venue Cost</label>
                    <input asp-for="@Model.BookingVenue.VenueCost" readonly="readonly" maxlength="10" name="VenueCost" type="text" class="form-control" />
                    
                </div>
            </div>

            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">Flower Details</h5>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.BookingFlower.Count(); i++)
                    {
                        <div class="row">
                            <div class="col-6">
                                <label class="control-label" asp-for="@Model.BookingFlower[i].FlowerName">FlowerName</label>
                                <input asp-for="@Model.BookingFlower[i].FlowerName" readonly="readonly" type="text" class="form-control" />
                            </div>

                            <div class="col-6">
                                <label class="control-label" asp-for="@Model.BookingFlower[i].FlowerCost">FlowerCost</label>
                                <input asp-for="@Model.BookingFlower[i].FlowerCost" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                            <div class="col-6">
                            </div>
                            <div class="col-6">
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h5 class="card-title m-0">Menu Details</h5>
                </div>
                <div class="card-body">
                    @for (int i = 0; i < Model.BookingLight.Count(); i++)
                    {
                        <div class="row">
                            <div class="col-lg-6">
                                <label class="control-label" asp-for="@Model.BookingFood[i].FoodName">FoodName</label>
                                <input asp-for="@Model.BookingFood[i].FoodName" readonly="readonly" type="text" class="form-control" />
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label" asp-for="@Model.BookingFood[i].FoodTypeName">FoodType</label>
                                <input asp-for="@Model.BookingFood[i].FoodTypeName" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <label class="control-label" asp-for="@Model.BookingFood[i].MealTypeName">MealType</label>
                                <input asp-for="@Model.BookingFood[i].MealTypeName" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                            <div class="col-lg-6">
                                <label class="control-label" asp-for="@Model.BookingFood[i].FoodCost">MealType</label>
                                <input asp-for="@Model.BookingFood[i].FoodCost" readonly="readonly" maxlength="10" name="Mobileno" type="text" class="form-control" />
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
@*</div>*@